{
    "compilerOptions": {
        "strict": true,
        "target": "es2017",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "jsx": "react-jsx",
        "typeRoots": [
            "node_modules/@types"
        ],
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@public/*": [
                "public/*"
            ]
        }
    }
}