{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "command": "pnpm",
  "tasks": [
    {
      "label": "install",
      "type": "shell",
      "command": "pnpm",
      "args": ["install"]
    },
    {
      "label": "test",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "test"]
    },
    {
      "label": "dev",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "watch"]
    },
    {
      "label": "build",
      "type": "shell",
      "group": "build",
      "command": "pnpm",
      "args": ["run", "build"]
    }
  ]
}
