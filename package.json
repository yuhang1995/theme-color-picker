{
    "name": "chrome-extension-typescript-starter",
    "version": "1.0.0",
    "description": "chrome-extension-typescript-starter",
    "main": "index.js",
    "scripts": {
        "watch": "rimraf dist && webpack --config webpack/webpack.dev.js --watch",
        "build": "rimraf dist && webpack --config webpack/webpack.prod.js",
        "clean": "rimraf dist",
        "test": "npx jest",
        "lint": "npx eslint ./src",
        "lint:fix": "pnpm run lint --fix",
        "prettier": "npx prettier ./src --check",
        "prettier:fix": "pnpm run prettier --write",
        "format": "pnpm run prettier:fix && pnpm run lint:fix",
        "prepare": "husky install"
    },
    "author": "",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/chibat/chrome-extension-typescript-starter.git"
    },
    "lint-staged": {
        "*.(ts|tsx)": [
            "prettier --write",
            "eslint"
        ]
    },
    "dependencies": {
        "@ctrl/tinycolor": "^3.6.0",
        "@hookform/resolvers": "^3.1.0",
        "react": "^18.2.0",
        "react-click-away-listener": "^2.2.3",
        "react-dom": "^18.2.0",
        "react-hook-form": "^7.43.9",
        "yup": "^1.1.1"
    },
    "devDependencies": {
        "@babel/core": "^7.21.8",
        "@babel/preset-env": "^7.21.5",
        "@babel/preset-react": "^7.18.6",
        "@types/chrome": "0.0.158",
        "@types/jest": "^27.0.2",
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "@typescript-eslint/eslint-plugin": "^5.59.2",
        "@typescript-eslint/parser": "^5.59.2",
        "autoprefixer": "^10.4.14",
        "babel-loader": "^9.1.2",
        "copy-webpack-plugin": "^9.0.1",
        "css-loader": "^6.7.3",
        "eslint": "^8.40.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jsx-a11y": "^6.7.1",
        "eslint-plugin-react": "^7.32.2",
        "eslint-plugin-react-hooks": "^4.6.0",
        "glob": "^7.1.6",
        "jest": "^27.2.1",
        "mini-css-extract-plugin": "^2.7.5",
        "postcss": "^8.4.23",
        "postcss-loader": "^7.3.0",
        "postcss-prefix-selector": "^1.16.0",
        "prettier": "^2.8.7",
        "prettier-plugin-tailwindcss": "^0.2.8",
        "rimraf": "^3.0.2 ",
        "tailwindcss": "^3.3.2",
        "ts-jest": "^27.0.5",
        "ts-loader": "^8.0.0",
        "typescript": "^4.4.3 ",
        "webpack": "^5.76.0",
        "webpack-cli": "^4.0.0",
        "webpack-merge": "^5.0.0",
        "husky": "^8.0.0"
    }
}