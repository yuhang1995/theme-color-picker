{
    "name": "ThemeColorPicker",
    "description": "将选中颜色和主题颜色比对并返回主题值",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "html/popup.html",
        "default_icon": {
            "19": "img/icon_19.png",
            "38": "img/icon_38.png"
        }
    },
    "options_ui": {
        "page": "html/options.html",
        "open_in_tab": true
    },
    "icons": {
        "48": "img/icon_48.png",
        "128": "img/icon_128.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": [
                "css/common.css"
            ],
            "js": [
                "js/common.js",
                "js/content.js"
            ]
        }
    ],
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+B",
                "mac": "Command+B"
            }
        }
    }
}